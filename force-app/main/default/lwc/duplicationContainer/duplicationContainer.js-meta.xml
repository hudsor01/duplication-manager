<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__Tab</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__Tab,lightning__HomePage">
            <property
                name="height"
                type="Integer"
                default="800"
                label="Minimum Height"
                description="Minimum height of the component in pixels"
            />
            <property
                name="useSafeArea"
                type="Boolean"
                default="true" 
                label="Use Safe Area"
                description="Ensures component respects safe areas on mobile devices"
            />
        </targetConfig>
    </targetConfigs>
    <masterLabel>Duplicate Manager Container</masterLabel>
    <description>Main container for duplication management</description>
</LightningComponentBundle>
