<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage">
            <property name="percentage" type="Integer" default="0" label="Percentage" description="Percentage value to display in the progress ring (0-100)"/>
            <property name="size" type="String" default="medium" label="Size" description="Size of the progress ring" datasource="small,medium,large"/>
            <property name="variant" type="String" default="default" label="Variant" description="Color variant of the progress ring" datasource="default,success,warning,error"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>