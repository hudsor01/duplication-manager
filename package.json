{
  "name": "duplication-manager",
  "private": true,
  "version": "1.0.0",
  "description": "Salesforce App for managing duplications",
  "scripts": {
    "lint": "eslint **/lwc/**/*.js",
    "lint:fix": "eslint **/lwc/**/*.js --fix",
    "test": "npm run test:unit",
    "test:unit": "sfdx-lwc-jest",
    "test:unit:watch": "sfdx-lwc-jest --watch",
    "test:unit:debug": "sfdx-lwc-jest --debug",
    "test:unit:coverage": "sfdx-lwc-jest --coverage",
    "prettier": "prettier --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "prettier:verify": "prettier --check \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "prepare": "husky",
    "lwc:dev": "sf lightning lwc start"
  },
  "devDependencies": {
    "@lwc/eslint-plugin-lwc": "^2.0.0",
    "@prettier/plugin-xml": "3.4.1",
    "@salesforce/eslint-config-lwc": "^3.4.0",
    "@salesforce/eslint-plugin-lightning": "^1.0.0",
    "@salesforce/lwc-dev-server": "2.11.0",
    "@salesforce/sfdx-lwc-jest": "7.1.0",
    "eslint": "^8.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^26.9.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "prettier": "3.5.3",
    "prettier-plugin-apex": "2.2.6"
  },
  "lint-staged": {
    "**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}": [
      "prettier --write"
    ],
    "**/{aura,lwc}/**/*.js": [
      "eslint --fix"
    ]
  },
  "packageManager": "npm@10.9.2",
  "main": "package.json",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hudsor01/duplication-manager.git"
  },
  "keywords": [
    "salesforce"
  ],
  "author": "richard hudson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hudsor01/duplication-manager/issues"
  },
  "homepage": "https://github.com/hudsor01/duplication-manager#readme"
}
